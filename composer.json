{
    "name": "spiral/attributes",
    "type": "library",
    "description": "PHP attributes reader",
    "license": "MIT",
    "homepage": "https://spiral.dev",
    "support": {
        "issues": "https://github.com/spiral/attributes/issues",
        "source": "https://github.com/spiral/attributes"
    },
    "authors": [
        {
            "name": "Kirill Nesmeyanov (SerafimArts)",
            "email": "kirill.nesmeyanov@spiralscout.com"
        }
    ],
    "require": {
        "php": ">=8.1",
        "psr/cache": ">=1.0",
        "psr/simple-cache": "1 - 3"
    },
    "require-dev": {
        "doctrine/annotations": "^1.12 || ^2.0",
        "jetbrains/phpstorm-attributes": "^1.0",
        "phpunit/phpunit": "^9.5.20",
        "vimeo/psalm": "^5.17"
    },
    "autoload": {
        "files": [
            "src/polyfill.php"
        ],
        "psr-4": {
            "Spiral\\Attributes\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Spiral\\Tests\\Attributes\\": "tests"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "3.1.x-dev"
        }
    },
    "scripts": {
        "analyze": [
            "psalm --no-cache"
        ]
    },
    "suggest": {
        "doctrine/annotations": "^1.0 || ^2.0 for Doctrine metadata driver support"
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
